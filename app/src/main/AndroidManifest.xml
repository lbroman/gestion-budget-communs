            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.finances.terrier.com.budget.ihm.vue.MainActivity" />
        </activity>
        <activity
            android:name=".ihm.vue.ConnexionActivity"
            android:label="@string/title_activity_connexion"
            android:parentActivityName=".ihm.vue.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.finances.terrier.com.budget.ihm.vue.MainActivity" />
        </activity>
    </application>

</manifest>
