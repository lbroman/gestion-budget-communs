<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.finances.terrier.com.budget">

    <!-- Permissions -->
    <!-- AccÃ¨s Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ihm.vue.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ihm.vue.BudgetActivity"
            android:label="@string/title_activity_budget"
            android:parentActivityName=".ihm.vue.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.finances.terrier.com.budget.ihm.vue.MainActivity" />
        </activity>
        <activity
            android:name=".lockpattern.LockPatternActivity"
            android:label="@string/title_activity_budget"
